<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <!--公共Title-->
    <com.common.projectcommonframe.view.Title
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activityBg"
        android:id="@+id/container_sv"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <Button
                android:text="查询1(有弹窗)"
                android:id="@+id/main_check_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="查询2(无弹窗)"
                android:id="@+id/main_check2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="跳转到-->NoPresenterActivity"
                android:id="@+id/main_intent_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="跳转到-->TestPickerViewActivity"
                android:id="@+id/main_intent_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:text="弹出SweetDialog"
                android:id="@+id/main_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="打开通用WebView Activity"
                android:id="@+id/main_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="打开通用Banner(通用广告栏) Activity"
                android:id="@+id/main_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="打开xRecyleView  Activity"
                android:id="@+id/main_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="测试7.0上以系统(应用之间共享文件:比如安装APK)"
                android:id="@+id/main_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:maxLines="5"
                android:id="@+id/main_msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="Hello World!"/>

            <FrameLayout
                android:background="#e9e5e5"
                android:layout_marginTop="50dp"
                android:id="@+id/frame_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
